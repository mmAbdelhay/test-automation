{
    "manifest_version": 2,
    "name": "Event Recorder",
    "version": "1.0",
    "description": "Records DOM Events",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "icons": {
        "48": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ]
}
